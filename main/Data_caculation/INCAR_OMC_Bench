SYSTEM = NHN

!Initialisation:
 NWRITE     = 2    (Medium-level output***********************************************************************************************************************************)
 ISTART     = 1    (Read existing wavefunction; if there)
 INIWAV     = 1    (Random initial wavefunction; otherwise)


!Parallelisation:
 LPLANE   = .TRUE. (Real space distribution; supercells*******************************************************************************************************************)
 NPAR     = 1      (Max is no. nodes; don't set for hybrids***************************************************************************************************************)
 KPAR     = 4

!K Points
 KSPACING = 0.4   (*****************************************************************************************************************************************************)
 KGAMMA   = .TRUE.     (**************************************************************************************************************************************************)

!Electronic Relaxation:
 PREC    = Accurate  (Precision level***************************************************************************************************************************************)
 ADDGRID = .TRUE.   (Add a finer grid for the augmentation charges; .TRUE. is recommended for PAW potentials)*****************************
 LREAL   = .FALSE      (Projection operators: Auto-Automatic, .FALSE.-Accurate forces for phonon calculations***************************************************************)
 ALGO    = Normal      (SCF minimisation algorithm; 38/48 combo********************************************************************************************************)
 IALGO   = 38
 ENMAX   = 600.0 eV  (Plane-wave cutoff***********************************************************************************************************************************)
 NELM    = 500       (Max SCF steps***************************************************************************************************************************************)
 NELMIN  = 4         (Min SCF steps***************************************************************************************************************************************)
 EDIFF   = 1E-06     (SCF energy convergence; eV**************************************************************************************************************************)
 ISPIN   = 1         (1: Closed shell DFT; 2: Spin Polarised DFT**********************************************************************************************************)
# GGA     = PE        (PE: PBE; PS: PBEsol exchange-correlation************************************************************************************************************)







!Ionic Relaxation:
 EDIFFG  =  -1e-2   (Ionic convergence; eV/AA******************************************************************************************************************************)
 NSW     =  500     (Max ionic steps)
 BRION  =  2       (Algorithm: 0-MD, 1-Quasi-New, 2-CG********************************************************************************************************************)
 ISIF    =  3       (Stress/relaxation: 2-Ions, 3-Shape/Ions/Vol, 7-Volxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
 ISYM    =  2       (Symmetry: 0-None; 2-GGA-ChargeDensity/Forces/StressTensor symmetrized; 3-Hybrids-Forces/StressTensor symmetrized**************************************)
 SYMPREC =  1e-03   (Default: 1E-05xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx)
 ISMEAR  =  0       (0: Gaussian smearing ; -5: tetrahedron with Bloechl corrections, 更软，适合绝缘体和范德华晶体，有时会比 Gaussian 略难收敛)
 SIGMA   =  0.02    (Smearing value in eV, “展宽函数”平滑地分布电子占据数; metals: 0.2)
 POTIM   =  0.1     (timestep 1 fs*****************************************************************************************************************************************)


!Approximate vdW Correction
 IVDW     =  12       (0: none, 1: D2, 11: D3, 12: D3-BJ, 2: TS, 21: TS iterative Hirshfeld)
 LCHARG = .F.
 LWAVE = .F.


